
$(document).ready(function(){
  $('.vote').click(function() {

    let post_id = $(this).parents('.row').attr('id');

    data = {
      "post_id": post_id,
      "vote": 1,
    }

    $.ajax({
         type: "POST",
         url: "tweets/vote/",
         data: data,
         dataType: "json",
         success: function(json) {
            console.log(json);

          },
          error: function(rs, e) {
                alert(rs.responseText);
          }
    });

  });

});
